<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DigitalScoreboard.Scoreboard"
             x:DataType="local:GameViewModel"
             x:Class="DigitalScoreboard.Scoreboard.GamePage"
             Title="GamePage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <!--<Setter Property="FontFamily" />-->
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="{Binding Font}" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <Label Text="Home" />
        <Label Text="{Binding HomeTeamName}" />
        <Label Text="{Binding HomeTeamScore}" />
        <Label Text="X" IsVisible="{Binding HomeTeamPosession}" />

        <Label Text="Away" />
        <Label Text="{Binding AwayTeamName}" />
        <Label Text="{Binding AwayTeamScore}" />
        <Label Text="X" IsVisible="{Binding HomeTeamPosession}" />

        <Label Text="Quarter" />
        <Label Text="{Binding Period}" />
        <Label Text="{Binding TimeRemaining}" />

        <Label Text="{Binding Down}" />

        <Label Text="{Binding PlayClock}" />
    </VerticalStackLayout>
</ContentPage>
